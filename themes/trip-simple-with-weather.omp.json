{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{.UserName}} in <{{.Folder}}>",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "template": "\u250e"
        },
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:white",
          "background": "p:title-background",
          "template": " {{.Icon}}{{if .WSL}} (WSL){{end}}",
          "properties": {
            "linux": "\uf17c",
            "macos": "\uf179",
            "ubuntu": "\uf31b",
            "windows": "\uf871"
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:white",
          "background": "p:title-background",
          "template": " {{.UserName}}@{{.HostName}} "
        },
        {
          "background": "p:git-unmodified",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:git-modified{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:git-diverged{{ end }}",
            "{{ if gt .Ahead 0 }}p:git-ahead{{ end }}",
            "{{ if gt .Behind 0 }}p:git-behind{{ end }}"
          ],
          "foreground": "p:git-foreground",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": " {{.HEAD}}{{ if .Working.Changed }} \uF044 {{.Working.String}}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }} ",
          "type": "git"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:white",
          "background": "p:title-background",
          "template": " {{.FormattedMs}}",
          "properties": {
            "style": "austin",
            "threshold": 0
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "p:white",
          "background": "p:title-background",
          "template": "<p:white> \ue0ba\ue0bc </>{{.CurrentDate | date .Format}} ",
          "properties": {
            "time_format": "Monday 01/02/06 | 3:04:05 PM"
          }
        },
        {
          "type": "owm",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#ffffff",
          "background": "#FF0000",
          "template": "{{.Weather}} ({{.Temperature}}{{.UnitIcon}})",
          "properties": {
            "apikey": "!!!API KEY HERE!!!",
            "cache_timeout": 10,
            "http_timeout": 20,
            "location": "AMSTERDAM,NL",
            "units": "imperial"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "template": "<p:white>\u2516\u2528</> {{.Location}}",
          "properties": {
            "style": "full"
          }
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "p:green",
          "foreground_templates": ["{{if gt .Code 0}}p:red{{end}}"],
          "background": "transparent",
          "template": "\u276F",
          "properties": {
            "always_enabled": true
          }
        }
      ],
      "newline": true
    }
  ],
  "palette": {
    "black": "#111111",
    "blue": "#0000FF",
    "git": "#FFFB38",
    "git-unmodified": "#CAFFBF",
    "git-ahead": "#B388FF",
    "git-behind": "#B388FF",
    "git-diverged": "#FF4500",
    "git-foreground": "#021F34",
    "git-modified": "#FF9248",
    "green": "#00FF00",
    "red": "#FF0000",
    "title-background": "#464646",
    "white": "#FFFFFF"
  }
}
